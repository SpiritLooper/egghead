{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommitsDisabled"
  ],
  "commitMessagePrefix": "ðŸŽ¨ Renovate:",
  "ignorePaths": [
    "k8s/flux/flux-system/gotk-components.yaml"
  ],
  "flux": {
    "managerFilePatterns": [
      "/k8s/.+\\.ya?ml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/k8s/.+\\.ya?ml$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/k8s/.+\\.ya?ml$/"
    ]
  },
  "minimumReleaseAge": "2 days",
  "customManagers": [
    {
      "customType": "regex",
      "description": "Process inline comments for helm values like '# renovate: depName=ghcr.io/owner/image'",
      "managerFilePatterns": [
        "/k8s/.+\\.ya?ml$/"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*depName=(?<depName>.*?)\\s*\\n\\s*tag:\\s*(?<currentValue>[^\\s]+)"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "pin"
      ],
      "enabled": true
    },
    {
      "matchUpdateTypes": [
        "digest"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "renovate/renovate"
      ],
      "automerge": true,
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "schedule": [
        "* * 1 * *"
      ]
    },
    {
      "matchPackageNames": [
        "ghcr.io/immich-app/immich-server"
      ],
      "versioning": "semver"
    }
  ]
}
